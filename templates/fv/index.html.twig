{% extends 'base.html.twig' %}

{% block title %}Fv index{% endblock %}

{% block body %}
    <h1>Fv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NumerFaktury</th>
                <th>TerminPlatnosci</th>
                <th>KontId</th>
                <th>Typ</th>
                <th>StatusPlatnosci</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fv in fvs %}
            <tr>
                <td>{{ fv.id }}</td>
                <td>{{ fv.numerFaktury }}</td>
                <td>{{ fv.terminPlatnosci }}</td>
                <td>{{ fv.kontId }}</td>
                <td>{{ fv.typ }}</td>
                <td>{{ fv.statusPlatnosci }}</td>
                <td>
                    <a href="{{ path('fv_show', {'id': fv.id}) }}">show</a>
                    <a href="{{ path('fv_edit', {'id': fv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fv_new') }}">Create new</a>
{% endblock %}
